<themeCapabilities>
   
   <themeName>Epic Noir (Next)</themeName>

   <aspectRatio>16:9</aspectRatio>
   <aspectRatio>16:10</aspectRatio>

   <transitions name="transitions">
      <label>transitions</label>
      <selectable>false</selectable>
      <systemToSystem>instant</systemToSystem>
      <systemToGamelist>slide</systemToGamelist>
      <gamelistToGamelist>slide</gamelistToGamelist>
      <gamelistToSystem>slide</gamelistToSystem>
      <startupToSystem>fade</startupToSystem>
      <startupToGamelist>fade</startupToGamelist>
   </transitions>
   <suppressTransitionProfiles>
      <entry>builtin-instant</entry>
      <entry>builtin-slide</entry>
      <entry>builtin-fade</entry>
   </suppressTransitionProfiles>

   <variant name="gamelist-grid-marquee">
      <label>Grid: Marquees</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage,screenshot,titlescreen,fanart,cover</mediaType>
         <useVariant>gamelist-grid-basic</useVariant>
      </override>
   </variant>
   <variant name="gamelist-grid-screenshot">
      <label>Grid: Screenshots</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage,screenshot,titlescreen,fanart,cover</mediaType>
         <useVariant>gamelist-grid-basic</useVariant>
      </override>
   </variant>
   <variant name="gamelist-grid-physicalmedia">
      <label>Grid: Physical Media</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage,screenshot,titlescreen,fanart,cover</mediaType>
         <useVariant>gamelist-grid-basic</useVariant>
      </override>
   </variant>
   <variant name="gamelist-grid-cover">
      <label>Grid: Covers</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage,screenshot,titlescreen,fanart,cover</mediaType>
         <useVariant>gamelist-grid-basic</useVariant>
      </override>
   </variant>
   <variant name="gamelist-grid-titlescreen">
      <label>Grid: Title Screens</label>
      <selectable>true</selectable>
      <override>
         <trigger>noMedia</trigger>
         <mediaType>miximage,screenshot,titlescreen,fanart,cover</mediaType>
         <useVariant>gamelist-grid-basic</useVariant>
      </override>
   </variant>
   <variant name="gamelist-grid-basic">
      <label>Grid: No Metadata</label>
      <selectable>false</selectable>
   </variant>

</themeCapabilities>